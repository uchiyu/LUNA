<!DOCTYPE html>
<html>
<head>
  <title>Luna</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
<%= render 'layouts/react_hot_assets' %>

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title"><%= link_to '月例発表管理ツール Luna', documents_path, style: "color: #ffffff; text-decoration: none;" %></span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <nav class="mdl-navigation mdl-layout--large-screen-only">
        <%= link_to 'プロフィール変更', edit_user_registration_path, class: "mdl-navigation__link" %>
        <%= link_to "ログアウト", destroy_user_session_path, class: "mdl-navigation__link", method: :delete %>
        <%= link_to "アカウント追加", new_user_admin_path, class: "mdl-navigation__link" %>
        <%#= link_to "学生の追加", new_student_path %>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <% if user_signed_in? %>
      <nav class="mdl-navigation">
        <%= link_to 'プロフィール変更', edit_user_registration_path, class: "mdl-navigation__link" %>
        <%= link_to "アカウント追加", new_user_admin_path, class: "mdl-navigation__link" %>
        <%= link_to "ログアウト", destroy_user_session_path, class: "mdl-navigation__link", method: :delete %>
        <%#= link_to "学生の追加", new_student_path %>
      </nav> 
    <% else %>
      <div>ログインして下さい</div>
    <% end %>
  </div>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <main class="mdl-layout__content">
    <div class="page-content">
      <%= yield %>
    </div>
  </main>
</div>

</body>
</html>
